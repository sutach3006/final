<link rel="stylesheet" href="/index.css">
<body>
    <h1 class="abm">About me</h1>
        <div class="flexbox">
                {{#with data}}
                <div class="box"><li class="ctn"><span class="first-block">Full name &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.name}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Nickname &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.nickname}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Sex &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.sex}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Education &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.education}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Date &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.date}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Age &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.age}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Nationality &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.nationality}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Race &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.race}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Address &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.address}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Phone &nbsp: &nbsp&nbsp</span><span class="second-block"> {{aboutme.phone}}</span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Email &nbsp: &nbsp&nbsp</span><span class="second-block">
                    <a class="email" href="mailto:{{aboutme.email}}"> {{aboutme.email}}</a>
                </span></li></div>
                <div class="box"><li class="ctn"><span class="first-block">Motto &nbsp: &nbsp&nbsp</span><span class="second-block"> {{motto}}</span></li></div>
                {{/with}}
        </div>
</body>